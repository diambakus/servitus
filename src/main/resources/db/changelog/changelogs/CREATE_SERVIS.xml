<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="adruida">
        <createSequence sequenceName="servis_seq" startValue="1" incrementBy="1"/>
    </changeSet>

    <!-- Create the units table -->
    <changeSet id="2" author="adruida">
        <createTable tableName="servis" schemaName="${kumpoSchemaName}">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="requester" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="price" type="DECIMAL(10,2)"/>
            <column name="servis_type" type="VARCHAR(50)"/>
            <column name="additional_details" type="TEXT"/>
            <column name="created" type="DATE"/>
            <column name="modified" type="DATE"/>
            <column name="active" type="BOOLEAN"/>
        </createTable>
        <addDefaultValue
                tableName="servis"
                columnName="id"
                defaultValueComputed="nextval('org_seq')"
                columnDataType="BIGINT"/>
    </changeSet>

    <changeSet id="3" author="adruida">
        <createTable tableName="requisites" schemaName="${kumpoSchemaName}">
            <column name="servis_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_requisites_servis" references="servis(id)"/>
            </column>
            <column name="position" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)"/>
        </createTable>
        <addPrimaryKey tableName="requisites" columnNames="servis_id, position" />
    </changeSet>

    <changeSet id="4" author="adruida">
        <renameColumn tableName="servis" oldColumnName="additional_details" newColumnName="description" columnDataType="text"/>
    </changeSet>
    <changeSet id="5-delete-column-requester" author="adruida">
        <dropColumn tableName="servis" columnName="requester" />
    </changeSet>

</databaseChangeLog>