<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-schema" author="adruida">
        <sql>CREATE SCHEMA IF NOT EXISTS "SCHEMAKUMPO";</sql>
    </changeSet>
    <changeSet id="1" author="adruida">
        <createSequence sequenceName="contact_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="contacts" schemaName="${kumpoSchemaName}">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="phone" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
            <column name="contact_type" type="VARCHAR(50)"/>
            <column name="created" type="DATETIME"/>
        </createTable>
    </changeSet>
</databaseChangeLog>