<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-schema" author="adruida">
        <sql>CREATE SCHEMA IF NOT EXISTS "schemakumpo";</sql>
    </changeSet>
    <changeSet id="create_address" author="adruida">
        <createSequence sequenceName="address_seq" startValue="1" incrementBy="1"/>

        <createTable tableName="addresses" schemaName="${kumpoSchemaName}">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="street" type="VARCHAR(255)"/>
            <column name="city" type="VARCHAR(255)"/>
            <column name="state" type="VARCHAR(255)"/>
            <column name="country" type="VARCHAR(255)"/>
            <column name="postal_code" type="VARCHAR(255)"/>
            <column name="address_type" type="VARCHAR(50)"/>
            <column name="created" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="enhance_addressNumber_lat_lon" author="adruida">
        <addColumn tableName="addresses">
            <column name="address_number" type="VARCHAR(10)"/>
            <column name="latitude" type="double" />
            <column name="longitude" type="double" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
